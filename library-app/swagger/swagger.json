{
  "openapi": "3.0.0",
  "info": {
    "title": "Library API",
    "description": "API for managing library operations",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development server (HTTP)"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Welcome message",
        "responses": {
          "200": {
            "description": "A welcome message",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Hello!! you connected with the API"
                }
              }
            }
          }
        }
      }
    },
    "/members": {
      "get": {
        "summary": "Get all members along with borrowed books",
        "responses": {
          "200": {
            "description": "A list of members",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Member"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/books": {
      "get": {
        "summary": "Get all books along with borrowers",
        "responses": {
          "200": {
            "description": "A list of books",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "amount": {
                      "type": "integer"
                    },
                    "booksData": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Book"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/books/available": {
      "get": {
        "summary": "Get available books",
        "responses": {
          "200": {
            "description": "A list of available books",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "count": {
                      "type": "integer"
                    },
                    "rows": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/AvailableBook"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/books/unavailable": {
      "get": {
        "summary": "Get unavailable books",
        "responses": {
          "200": {
            "description": "A list of unavailable books",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UnavailableBook"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/borrows": {
      "post": {
        "summary": "Borrow a book",
        "requestBody": {
          "description": "Details for borrowing a book",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "memberCode": {
                    "type": "string"
                  },
                  "bookCode": {
                    "type": "string"
                  }
                },
                "required": [
                  "memberCode",
                  "bookCode"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Borrowing a book",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Book borrowed successfully"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Member not found"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "You can borrow only 2 books"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Internal server error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/returns": {
      "post": {
        "summary": "Return a book",
        "requestBody": {
          "description": "Details for returning a book",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "memberCode": {
                    "type": "string"
                  },
                  "bookCode": {
                    "type": "string"
                  }
                },
                "required": [
                  "memberCode",
                  "bookCode"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returning a book",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Book returned successfully"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Member not found"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Book not borrowed by the member"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Internal server error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Member": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "code": {
            "type": "string"
          },
          "Books": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "title": {
                  "type": "string"
                },
                "author": {
                  "type": "string"
                }
              }
            }
          },
          "borrowedCount": {
            "type": "integer"
          }
        }
      },
      "Book": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "code": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "author": {
            "type": "string"
          },
          "stock": {
            "type": "integer"
          },
          "borrowers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "memberId": {
                  "type": "integer"
                },
                "memberCode": {
                  "type": "string"
                },
                "memberName": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "UnavailableBook": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "code": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "author": {
            "type": "string"
          },
          "stock": {
            "type": "integer"
          },
          "borrowers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "memberId": {
                  "type": "integer"
                },
                "memberCode": {
                  "type": "string"
                },
                "memberName": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "AvailableBook": {
        "type": "object",
        "properties": {
          "count": {
            "type": "integer"
          },
          "rows": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "code": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "author": {
                  "type": "string"
                },
                "stock": {
                  "type": "integer"
                }
              }
            }
          }
        }
      }
    }
  }
}